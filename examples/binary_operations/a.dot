digraph Automaton {
  // Automaton properties
  rankdir=LR;
  node [shape=circle, fontname="Helvetica", fontsize=10];
  edge [fontname="Helvetica", fontsize=8, color="black"];
  // State declarations
  "q0" [fillcolor=white];
  "q1" [fillcolor=white];
  "q2" [peripheries=2, fillcolor=white];

  // Transitions
  "q0" -> "q0" [label="b"];
  "q0" -> "q1" [label="a"];
  "q1" -> "q2" [label="b"];
  "q1" -> "q1" [label="a"];
  "q2" -> "q0" [label="b"];
  "q2" -> "q1" [label="a"];
}
