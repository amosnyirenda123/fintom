digraph Automaton {
  // Automaton properties
  rankdir=TB;
  node [shape=ellipse, fontname="Times-Roman", fontsize=14];
  edge [fontname="Times-Roman", fontsize=11, color="navy"];
  // Metadata
  label="States: 3, Alphabet size: 2";
  labelloc=top;
  // Alphabet: "a", "b"

  // State declarations
  "q0" [style=filled, fillcolor=gold, tooltip="2 transitions"];
  "q1" [fillcolor=ghostwhite, tooltip="2 transitions"];
  "q2" [peripheries=2, fillcolor=ghostwhite, tooltip="2 transitions"];

  // Transitions
  "q0" -> "q0" [label="b"];
  "q0" -> "q1" [label="a"];
  "q1" -> "q2" [label="b"];
  "q1" -> "q1" [label="a"];
  "q2" -> "q0" [label="b"];
  "q2" -> "q1" [label="a"];
}
